@page "/available-orders"

<PageTitle>Фотоцентр | Доступные заказы</PageTitle>

<head runat="server">
    <link href="Assets\Css\Orders.css" rel="stylesheet" type="text/css" />
</head>

<div class="order-container">
    <!-- Поля для поиска или фильтрации -->
    <div class="search-container">
        <input type="text" id="searchByUser" placeholder="Поиск по имени пользователя">
        <input type="text" id="searchByService" placeholder="Поиск по типу услуги">
    </div>

    <!-- Таблица заказов -->
    <table id="orderTable">
        <thead>
            <tr>
                <th onclick="sortTable(0)">Имя пользователя</th>
                <th onclick="sortTable(1)">Цена</th>
                <th onclick="sortTable(2)">Тип услуги</th>
                <th onclick="sortTable(3)">Описание</th>
                <th onclick="sortTable(4)">Дата</th>
                <th>Изображение</th>
                <th>Действие</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Иван Иванов</td>
                <td>1500 руб.</td>
                <td>Дизайн логотипа</td>
                <td>Создание логотипа для новой компании</td>
                <td>-</td>
                <td><a href="#">Ссылка на изображение</a></td>
                <td><button class="accept-btn">Принять</button></td>
            </tr>
            <tr>
                <td>Анна Петрова</td>
                <td>3000 руб.</td>
                <td>Создание веб-сайта</td>
                <td>Разработка сайта-визитки</td>
                <td>-</td>
                <td><a href="#">Ссылка на изображение</a></td>
                <td><button class="accept-btn">Принять</button></td>
            </tr>
            <!-- Добавьте больше строк заказов при необходимости -->
        </tbody>
    </table>
</div>


@page "/logs"

<PageTitle>Фотоцентр | О нас</PageTitle>

<head runat="server">
    <link href="Assets\Css\Logs.css" rel="stylesheet" type="text/css" />
</head>

<div class="log-container">
    <!-- Поля для поиска или фильтрации -->
    <div class="search-container">
        <input type="text" id="searchById" placeholder="Поиск по ID лога">
        <input type="text" id="searchByUser" placeholder="Поиск по ID пользователя">
    </div>

    <!-- Таблица логов -->
    <table id="logTable">
        <thead>
            <tr>
                <th onclick="sortTable(0)">ID лога</th>
                <th onclick="sortTable(1)">ID пользователя</th>
                <th onclick="sortTable(2)">Тип действия</th>
                <th onclick="sortTable(3)">Дата</th>
                <th onclick="sortTable(4)">Детали</th>
                <th onclick="sortTable(5)">Название таблицы</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>1</td>
                <td>101</td>
                <td>Добавление</td>
                <td>2024-10-20</td>
                <td>Заказ создан</td>
                <td>-</td>
            </tr>
            <tr>
                <td>2</td>
                <td>102</td>
                <td>Удаление</td>
                <td>2024-10-21</td>
                <td>Заказ отправлен</td>
                <td>-</td>
            </tr>
            <!-- Примерные данные, можно добавить еще -->
        </tbody>
    </table>
</div>

<script>
    // Заготовка для функции сортировки, сортировка по столбцу
    function sortTable(columnIndex) {
        var table, rows, switching, i, x, y, shouldSwitch;
        table = document.getElementById("logTable");
        switching = true;
        while (switching) {
            switching = false;
            rows = table.rows;
            for (i = 1; i < (rows.length - 1); i++) {
                shouldSwitch = false;
                x = rows[i].getElementsByTagName("TD")[columnIndex];
                y = rows[i + 1].getElementsByTagName("TD")[columnIndex];
                if (x.innerHTML.toLowerCase() > y.innerHTML.toLowerCase()) {
                    shouldSwitch = true;
                    break;
                }
            }
            if (shouldSwitch) {
                rows[i].parentNode.insertBefore(rows[i + 1], rows[i]);
                switching = true;
            }
        }
    }
</script>

@page "/not-complete-order"

<PageTitle>Фотоцентр | Принятые заказы</PageTitle>

<head runat="server">
    <link href="Assets\Css\NotCompleteOrder.css" rel="stylesheet" type="text/css" />
</head>

<div class="container">
    <h2>Заказ</h2>

    <div class="order-details">
        <!-- Отображение фото -->
        <img src="https://via.placeholder.com/800x400" alt="Фото заказа">
        <!-- Ссылка на фото -->
        <a href="https://via.placeholder.com/800x400" target="_blank" class="photo-link">Ссылка на фото</a>
    </div>

    <div class="description-section">
        <label for="description">Описание заказа:</label>
        <!-- Поле для ввода описания -->
        <textarea id="description" rows="5" readonly>Описание пока не изменено. Вы можете отредактировать его ниже.</textarea>
    </div>

    <div class="buttons">
        <!-- Кнопка для изменения описания -->
        <button class="edit-button" onclick="document.getElementById('description').readOnly = false;">
            Изменить описание
        </button>
        <!-- Кнопка для отмены заказа -->
        <button class="cancel-button">
            Отменить заказ
        </button>
    </div>
</div>

